<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UnitTwo.unitTwoP3Fragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tutorial: Understanding View Hierarchy"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- What is View Hierarchy -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is View Hierarchy?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In Android, the view hierarchy refers to the tree-like structure of UI elements (views) that are arranged in a parent-child relationship. This hierarchy defines how views are nested within each other and displayed on the screen."
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="16dp" />

    <!-- Example: View Hierarchy -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Example: View Hierarchy"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here's an example of a simple view hierarchy:"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="8dp" />

    <!-- Example Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/darker_gray"
        android:padding="8dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parent Layout"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#06799F"
            android:padding="8dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Child TextView 1"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Child TextView 2"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:backgroundTint="#80B11E"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />

    </LinearLayout>

    <!-- Explanation of Example -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explanation:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In this example, the 'Parent Layout' is a LinearLayout that contains three child views: two TextViews and one Button. The LinearLayout acts as the parent view, while each TextView and Button is a child view."
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="16dp" />



    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tutorial: Understanding Widget Attributes"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- What is a Widget -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is a Widget?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In Android development, a widget is a user interface component (like TextView, Button, etc.) that users interact with on the screen. Widgets can display information, respond to user actions, and enhance the user experience."
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="16dp" />

    <!-- Example: TextView Widget -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Example: TextView Widget"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Below is an example of a TextView widget with different attributes:"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="8dp" />

    <!-- Example: TextView with Attributes -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, Android!"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:background="@android:color/darker_gray"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Explanation of Attributes -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explanation of Attributes:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- TextView Attributes -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Text: 'Hello, Android!'"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Text Size: 16sp"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. Text Color: Red"
        android:textSize="16sp"
        android:textColor="#DA0707"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4. Background Color: Darker Gray"
        android:textSize="16sp"
        android:background="@android:color/darker_gray"
        android:lineSpacingExtra="4dp"
        android:padding="8dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5. Padding: 8dp"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />
    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tutorial: Different Versions of Android"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Introduction -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduction"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android, developed by Google, has gone through several major versions since its inception. Each version introduces new features, improvements, and optimizations, shaping the evolution of the Android ecosystem."
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="16dp" />

    <!-- Android Versions -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Versions"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Version: Android 1.0 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android 1.0 (API Level 1)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Release Date: September 2008"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Features:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- First commercial version of Android."
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="16dp" />

    <!-- Version: Android 1.5 Cupcake -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android 1.5 Cupcake (API Level 3)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Release Date: April 2009"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Features:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Virtual keyboard, widgets, and performance improvements."
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="16dp" />

    <!-- Version: Android 2.2 Froyo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android 2.2 Froyo (API Level 8)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Release Date: May 2010"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Features:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Speed improvements, USB tethering, and Adobe Flash support."
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="16dp" />
</LinearLayout>
    </FrameLayout>
</ScrollView>
