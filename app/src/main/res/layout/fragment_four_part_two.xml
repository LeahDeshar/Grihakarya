<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UnitFour.FourPartTwoFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/question_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explain Intent and Its types ?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="An Intent in Android is a messaging object used to request an action from another app component. It can be used to start activities, services, deliver broadcasts, or communicate with other apps. Intents can carry data to be processed by the receiving component."
                android:paddingBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="There are two types of intents:"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Explicit Intent"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="An explicit intent specifies the exact component to start by using the component's class name. It is typically used to start a specific activity or service within the same application."
                android:paddingBottom="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Example:"
                android:textStyle="italic"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intent intent = new Intent(this, SecondActivity.class);\nstartActivity(intent);"
                android:paddingBottom="16dp"
                android:background="#f0f0f0"
                android:padding="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Implicit Intent"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="An implicit intent does not specify a specific component.
                Instead, it declares a general action to perform, which allows any app
                that can handle that action to respond. The system will determine the
                best component to run based on the intent's action and data."
                android:paddingBottom="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Example:"
                android:textStyle="italic"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intent intent = new Intent(Intent.ACTION_VIEW);
                \nintent.setData(Uri.parse('http://www.example.com'));\nstartActivity(intent);"
            android:paddingBottom="16dp"
            android:background="#f0f0f0"
            android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Creating multiple activities"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Creating multiple activities in an Android
                application allows you to navigate between different screens.
                Here's a step-by-step guide on how to create and manage multiple activities:"
                android:paddingBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Create a New Activity"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You can create a new activity in Android Studio by following these steps:"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Using Android Studio Interface"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Open Android Studio."
                android:paddingBottom="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Right-click on your app's package name (usually in the app/java/com.example.yourapp directory)."
                android:paddingBottom="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Select New > Activity > Empty Activity."
                android:paddingBottom="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. Name your activity, e.g., SecondActivity."
                android:paddingBottom="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5. Click Finish."
                android:paddingBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This will generate a new Java/Kotlin file (SecondActivity.java or SecondActivity.kt) and a corresponding XML layout file (activity_second.xml)."
                android:paddingBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manually Creating an Activity"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Create a New Java/Kotlin File:"
                android:paddingBottom="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Right-click on your package name."
                android:paddingBottom="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Select New > Java Class or New > Kotlin Class."
                android:paddingBottom="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Name it SecondActivity."
                android:paddingBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Extend the Activity Class:"
                android:paddingBottom="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Open SecondActivity.java or SecondActivity.kt and extend the Activity or AppCompatActivity class."
                android:paddingBottom="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Override the onCreate method."
                android:paddingBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Example:"
                android:textStyle="italic"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="// SecondActivity.java\npackage com.example.yourapp;\n\nimport android.os.Bundle;\nimport androidx.appcompat.app.AppCompatActivity;\n\npublic class SecondActivity extends AppCompatActivity {\n    @Override\n    protected void onCreate(Bundle savedInstanceState) {\n        super.onCreate(savedInstanceState);\n        setContentView(R.layout.activity_second);\n    }\n}"
                android:paddingBottom="16dp"
                android:background="#f0f0f0"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Create a Layout File:"
                android:paddingBottom="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Create a new XML layout file in res/layout and name it activity_second.xml."
                android:paddingBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Example:"
                android:textStyle="italic"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="<?xml version='1.0' encoding='utf-8'?>\n<RelativeLayout xmlns:android='http://schemas.android.com/apk/res/android'\n    android:layout_width='match_parent'\n    android:layout_height='match_parent'>\n\n<TextView\n android:id='@+id/textView'\nandroid:layout_width='wrap_content'\nandroid:layout_height='wrap_content'\nandroid:text='This is the Second Activity'\nandroid:layout_centerInParent='true'/>\n\n</RelativeLayout>"
        android:paddingBottom="16dp"
        android:background="#f0f0f0"
        android:padding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Declare the Activity in AndroidManifest.xml"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You need to declare your new activity in the AndroidManifest.xml file."
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Example:"
            android:textStyle="italic"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="<application>\n \n  <activity android:name='.MainActivity'>\n    <intent-filter>\n      <action android:name='android.intent.action.MAIN' />\n
   <category android:name='android.intent.category.LAUNCHER' />\n
    </intent-filter>\n    </activity>\n
    <activity android:name='.SecondActivity' />\n</application>"
    android:paddingBottom="16dp"
    android:background="#f0f0f0"
    android:padding="8dp"/>

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="3. Navigate Between Activities"
android:textSize="18sp"
android:textStyle="bold"
android:paddingBottom="8dp"/>

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="You can use Intents to navigate between activities. For example, to navigate from MainActivity to SecondActivity, add a button in MainActivity and set an onClick listener."
android:paddingBottom="16dp"/>

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="MainActivity.java"
android:textSize="16sp"
android:textStyle="bold"
android:paddingBottom="8dp"/>

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="1. Modify the Layout File:"
android:paddingBottom="4dp"/>
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="- Add a button to the activity_main.xml layout file."
android:paddingBottom="16dp"/>

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Example:"
android:textStyle="italic"
android:paddingBottom="8dp"/>

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="\n<?xml version='1.0' encoding='utf-8'?>\n<RelativeLayout xmlns:android='http://schemas.android.com/apk/res/android'\nandroid:layout_width='match_parent'\n    android:layout_height='match_parent'>\n\n    <Button\n        android:id='@+id/button'\n        android:layout_width='wrap_content' \n        android:layout_height='wrap_content'\n        android:text='Go to Second Activity'\n        android:layout_centerInParent='true'/>\n\n</RelativeLayout>"
    android:paddingBottom="16dp"
    android:background="#f0f0f0"
    android:padding="8dp"/>

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="2. Set OnClickListener in MainActivity:"
android:paddingBottom="4dp"/>
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="- In the MainActivity.java, set an OnClickListener for the button to start the SecondActivity."
android:paddingBottom="16dp"/>

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Example:"
android:textStyle="italic"
android:paddingBottom="8dp"/>

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="// MainActivity.java\npackage com.example.yourapp;\n\nimport android.content.Intent;\nimport android.os.Bundle;\nimport android.view.View;\nimport android.widget.Button;\nimport androidx.appcompat.app.AppCompatActivity;\n\npublic class MainActivity extends AppCompatActivity {\n    @Override\n    protected void onCreate(Bundle savedInstanceState) {\n        super.onCreate(savedInstanceState);\n        setContentView(R.layout.activity_main);\n\n        Button button = findViewById(R.id.button);\n        button.setOnClickListener(new View.OnClickListener() {\n            @Override\n            public void onClick(View v) {\n                Intent intent = new Intent(MainActivity.this, SecondActivity.class);\n                startActivity(intent);\n            }\n        });\n    }\n}"
android:paddingBottom="16dp"
android:background="#f0f0f0"
android:padding="8dp"/>

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="4. Run Your Application"
android:textSize="18sp"
android:textStyle="bold"
android:paddingBottom="8dp"/>

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="- Build and Run your application.\n- Click the button in MainActivity to navigate to SecondActivity."
android:paddingBottom="16dp"/>

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Summary"
android:textSize="18sp"
android:textStyle="bold"
android:paddingBottom="8dp"/>

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="1. Create a new activity using Android Studio or manually."
android:paddingBottom="4dp"/>
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="2. Declare the new activity in the AndroidManifest.xml."
android:paddingBottom="4dp"/>
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="3. Navigate between activities using Intents."
android:paddingBottom="16dp"/>

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="This process allows you to create multiple activities and navigate between them, providing a way to build complex and interactive Android applications."
android:paddingBottom="16dp"/>

        </LinearLayout>
    </ScrollView>

</FrameLayout>