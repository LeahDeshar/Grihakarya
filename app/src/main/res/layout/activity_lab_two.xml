<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".labassignment.LabTwoActivity">
    <LinearLayout
        android:id="@+id/frontlayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/card_bg"
        android:orientation="vertical"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/card_logi" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Empowering Innovation, Transforming Tomorrow"
            android:textColor="#CABC8B"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/card_banner"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="www.business.com"
            android:textColor="#051d28"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/backlayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/frontlayout"
        android:layout_marginTop="30dp"
        android:background="@drawable/card_bg_i"

        android:layout_marginHorizontal="5dp"
       >

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/card_logi" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Empowering Innovation"
                android:textColor="#CABC8B"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/qr" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="26dp"
                android:text="Leah Deshar"
                android:textStyle="bold"
                android:textColor="#051d28"
                android:textSize="25sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Stack Developer"
                android:layout_marginLeft="35dp"

                android:textColor="#051d28"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/num1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+55 012 2345"
                    android:textColor="#051d28"

                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="50dp"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+55 012 2345"
                    android:textColor="#051d28"
                    android:layout_marginLeft="50dp"


                    android:layout_below="@+id/num1"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/baseline_phone_24"
                    android:backgroundTint="#051d28"
                    android:layout_toRightOf="@+id/num2"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/phone1"
                    />


                <TextView
                    android:id="@+id/mail1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="leah.desar@gmail.com"
                    android:textColor="#051d28"
                    android:layout_below="@+id/num2"

                    android:layout_marginTop="10dp"

                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/mail2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xyz@gmail.com"
                    android:layout_marginLeft="40dp"

                    android:textColor="#051d28"
                    android:layout_below="@+id/mail1"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/baseline_email_24"
                    android:backgroundTint="#051d28"
                    android:layout_toRightOf="@+id/mail1"
                    android:layout_below="@+id/phone1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    />


                <TextView
                    android:id="@+id/location1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kathmandu,Nepal"
                    android:textColor="#051d28"
                    android:layout_marginLeft="30dp"

                    android:layout_below="@+id/mail2"
                    android:layout_marginTop="10dp"
                    android:textSize="13sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/baseline_location_pin_24"
                    android:backgroundTint="#051d28"
                    android:layout_toRightOf="@+id/mail1"
                    android:layout_below="@+id/mail"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    />
            </RelativeLayout>




        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>