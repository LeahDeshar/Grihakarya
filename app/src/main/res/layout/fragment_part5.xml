<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:scrollbars="none"
android:layout_width="match_parent"
android:layout_height="match_parent">

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UnitThree.Part5Fragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="AbsoluteLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="70dp"
        android:letterSpacing="0.04"
        android:lineSpacingExtra="3dp"
        android:justificationMode="inter_word"
        android:text="`AbsoluteLayout` is a deprecated ViewGroup that enables you to specify the exact x and y coordinates of its children. This layout type is not recommended for use in modern Android applications due to its rigidity and the potential issues it can cause on different screen sizes and resolutions." />

    <ImageView
        android:layout_width="330dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="296dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/absolute" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="495dp"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AbsoluteLayout Attributes"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp" />

        <!-- x and y Positioning Attribute -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#8226; Positioning Attributes:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- android:layout_x: Specifies the x-coordinate of the view."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- android:layout_y: Specifies the y-coordinate of the view."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp"/>



    </LinearLayout>

</FrameLayout>
</ScrollView>
